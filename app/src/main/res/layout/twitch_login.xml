<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/red1"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TwitchLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:text="@string/FeaturedStreamerIntro"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/FeaturedStreamer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/FeaturedLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/FeaturedBio"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <Button
            android:id="@+id/crashWebsite"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginEnd="0dp"
            android:onClick="CrashSite"
            android:text="32 Kinds of Awesome!"
            android:background="@drawable/crash_blend"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>