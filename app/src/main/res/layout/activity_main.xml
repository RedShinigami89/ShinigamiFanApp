<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDBDBD"
    android:orientation="horizontal"
    tools:context="com.example.daryl.shinigamifanapp.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">


        <ImageView
            android:id="@+id/rbc2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rbc2" />


        <TextView
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:padding="28dp"
            android:text="Welcome User:"
            android:textColor="#000000" />

        <TextView
            style="@style/AppTheme"
            android:layout_width="143dp"
            android:layout_height="80dp"
            android:padding="20dp"
            android:text="User Shiki Points:" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_alignParentStart="false"
        android:layout_marginTop="80dp"
        android:paddingLeft="70dp">

        <ImageView
            android:id="@+id/twitch_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/twitch_icon" />


        <ImageView
            android:id="@+id/discord_icon"
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:onClick="run"
            android:layout_toEndOf="@+id/twitch_icon"
            android:scaleType="fitCenter"
            android:src="@drawable/discord_icon" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/discord_icon"
            android:scaleType="fitCenter"
            android:src="@drawable/twitter_icon" />

        <ImageView
            android:id="@+id/status_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/twitch_icon"
            android:layout_toStartOf="@+id/textView"
            android:src="@drawable/status_online" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/twitch_icon"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/discord_icon"
            android:gravity="bottom"
            android:text="Twitch" />

    </RelativeLayout>




</RelativeLayout>

